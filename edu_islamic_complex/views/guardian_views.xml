<odoo>
    <record id="view_edu_guardian_list" model="ir.ui.view">
        <field name="name">edu_guardian.list</field>
        <field name="model">edu_guardian</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="relation"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_edu_guardian_form" model="ir.ui.view">
        <field name="name">edu_guardian.form</field>
        <field name="model">edu_guardian</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="relation"/>
                            <field name="national_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="address"/>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Students">
                            <field name="student_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_edu_guardian_search" model="ir.ui.view">
        <field name="name">edu_guardian.search</field>
        <field name="model">edu_guardian</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="relation"/>
                <field name="phone"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="action_edu_guardians" model="ir.actions.act_window">
        <field name="name">Guardians</field>
        <field name="res_model">edu_guardian</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_edu_guardians" name="Guardians" parent="menu_edu_root" action="action_edu_guardians"
              sequence="20"/>

</odoo>

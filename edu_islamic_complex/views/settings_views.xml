<odoo>
    <record id="view_edu_settings" model="ir.ui.view">
        <field name="name">res.config.settings.edu_islamic</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div" position="inside">
                <div class="app_settings_block" data-string="Education" string="Education">
                    <h2>Education</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="enable_gender_rules"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="enable_gender_rules"/>
                                <div class="text-muted">Apply gender constraints when assigning teachers.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="block_sessions_on_overdue"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="block_sessions_on_overdue"/>
                                <div class="text-muted">Block scheduling when fees are overdue.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="max_overdue_days"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="max_overdue_days"/>
                                <div class="text-muted">Max overdue days before blocking sessions.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="session_duration_default"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="session_duration_default"/>
                                <div class="text-muted">Default duration for generated sessions.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="recurrence_weeks_default"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="recurrence_weeks_default"/>
                                <div class="text-muted">Number of weeks to generate by default.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="invoice_product_id_default"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="invoice_product_id_default"/>
                                <div class="text-muted">Default product for fees invoicing.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="fee_journal_id_default"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="fee_journal_id_default"/>
                                <div class="text-muted">Default journal for fee invoices.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

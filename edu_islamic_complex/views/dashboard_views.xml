<odoo>
    <record id="view_edu_dashboard_form" model="ir.ui.view">
        <field name="name">edu_dashboard.form</field>
        <field name="model">edu_dashboard</field>
        <field name="arch" type="xml">
            <form string="Education Dashboard" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <group>
                        <field name="active_students"/>
                        <field name="attendance_rate"/>
                        <field name="overdue_fees"/>
                        <field name="teacher_load"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_edu_dashboard" model="ir.actions.server">
        <field name="name">Education Dashboard</field>
        <field name="model_id" ref="model_edu_dashboard"/>
        <field name="state">code</field>
        <field name="code">
            action = env['edu_dashboard'].get_dashboard()
        </field>
    </record>

    <menuitem id="menu_edu_dashboard" name="Dashboard" parent="menu_edu_reports" action="action_edu_dashboard"
              sequence="10"/>

</odoo>

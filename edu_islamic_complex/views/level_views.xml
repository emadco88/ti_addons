<odoo>
    <record id="view_edu_level_list" model="ir.ui.view">
        <field name="name">edu_level.list</field>
        <field name="model">edu_level</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence"/>
                <field name="name"/>
                <field name="code"/>
                <field name="placement_min_score"/>
                <field name="placement_max_score"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_edu_level_form" model="ir.ui.view">
        <field name="name">edu_level.form</field>
        <field name="model">edu_level</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="placement_min_score"/>
                            <field name="placement_max_score"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Curriculum">
                            <field name="curriculum_notes"/>
                        </page>
                        <page string="Prerequisites">
                            <field name="prerequisite_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_edu_level_search" model="ir.ui.view">
        <field name="name">edu_level.search</field>
        <field name="model">edu_level</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="action_edu_levels" model="ir.actions.act_window">
        <field name="name">Levels</field>
        <field name="res_model">edu_level</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_edu_levels" name="Levels" parent="menu_edu_root" action="action_edu_levels" sequence="30"/>

</odoo>

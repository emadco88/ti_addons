<odoo>
    <record id="view_edu_session_list" model="ir.ui.view">
        <field name="name">edu_session.list</field>
        <field name="model">edu_session</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="start_time" widget="float_time"/>
                <field name="end_time" widget="float_time"/>
                <field name="teacher_id"/>
                <field name="class_group_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_edu_session_form" model="ir.ui.view">
        <field name="name">edu_session.form</field>
        <field name="model">edu_session</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="assignment_id"/>
                            <field name="teacher_id"/>
                            <field name="class_group_id"/>
                            <field name="student_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="location"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Attendance">
                            <field name="attendance_ids">
                                <list editable="bottom">
                                    <field name="person_type"/>
                                    <field name="student_id" invisible="person_type == 'teacher'"/>
                                    <field name="teacher_id" invisible="person_type == 'student'"/>
                                    <field name="status"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_edu_session_search" model="ir.ui.view">
        <field name="name">edu_session.search</field>
        <field name="model">edu_session</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="class_group_id"/>
                <field name="date"/>
                <filter string="Scheduled" name="scheduled" domain="[('state', '=', 'scheduled')]"/>
            </search>
        </field>
    </record>

    <record id="view_edu_session_calendar" model="ir.ui.view">
        <field name="name">edu_session.calendar</field>
        <field name="model">edu_session</field>
        <field name="arch" type="xml">
            <calendar date_start="start_datetime" date_stop="end_datetime" string="Sessions" color="teacher_id">
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="class_group_id"/>
            </calendar>
        </field>
    </record>

    <record id="action_edu_sessions" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="res_model">edu_session</field>
        <field name="view_mode">calendar,list,form</field>
    </record>

    <menuitem id="menu_edu_sessions" name="Sessions" parent="menu_edu_root" action="action_edu_sessions"
              sequence="50"/>

</odoo>

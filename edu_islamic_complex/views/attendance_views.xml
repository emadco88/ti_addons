<odoo>
    <record id="view_edu_attendance_list" model="ir.ui.view">
        <field name="name">edu_attendance.list</field>
        <field name="model">edu_attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="session_id"/>
                <field name="person_type"/>
                <field name="student_id"/>
                <field name="teacher_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_edu_attendance_form" model="ir.ui.view">
        <field name="name">edu_attendance.form</field>
        <field name="model">edu_attendance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="session_id"/>
                        <field name="person_type"/>
                        <field name="student_id" invisible="person_type == 'teacher'"/>
                        <field name="teacher_id" invisible="person_type == 'student'"/>
                        <field name="status"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_edu_attendance_search" model="ir.ui.view">
        <field name="name">edu_attendance.search</field>
        <field name="model">edu_attendance</field>
        <field name="arch" type="xml">
            <search>
                <field name="date"/>
                <field name="session_id"/>
                <field name="student_id"/>
                <field name="teacher_id"/>
                <field name="status"/>
                <filter string="Present" name="present" domain="[('status', '=', 'present')]"/>
            </search>
        </field>
    </record>

    <record id="view_edu_attendance_pivot" model="ir.ui.view">
        <field name="name">edu_attendance.pivot</field>
        <field name="model">edu_attendance</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="status" type="row"/>
                <field name="date" type="col" interval="month"/>
            </pivot>
        </field>
    </record>

    <record id="view_edu_attendance_graph" model="ir.ui.view">
        <field name="name">edu_attendance.graph</field>
        <field name="model">edu_attendance</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="date" type="row" interval="month"/>
            </graph>
        </field>
    </record>

    <record id="action_edu_attendance" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">edu_attendance</field>
        <field name="view_mode">list,form,pivot,graph</field>
    </record>

    <menuitem id="menu_edu_attendance" name="Attendance" parent="menu_edu_root" action="action_edu_attendance"
              sequence="60"/>

</odoo>

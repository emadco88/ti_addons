<odoo>
    <record id="view_edu_enrollment_list" model="ir.ui.view">
        <field name="name">edu_enrollment.list</field>
        <field name="model">edu_enrollment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="student_id"/>
                <field name="level_id"/>
                <field name="class_group_id"/>
                <field name="start_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_edu_enrollment_form" model="ir.ui.view">
        <field name="name">edu_enrollment.form</field>
        <field name="model">edu_enrollment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_invoice" type="object" string="Create Invoice" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="level_id"/>
                            <field name="class_group_id" domain="[('level_id', '=', level_id)]"/>
                            <field name="fee_plan_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="status"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Placement">
                            <group>
                                <field name="placement_score"/>
                                <field name="placement_result"/>
                            </group>
                        </page>
                        <page string="Invoices">
                            <field name="invoice_link_ids">
                                <list>
                                    <field name="invoice_id"/>
                                    <field name="amount_total"/>
                                    <field name="amount_residual"/>
                                    <field name="invoice_date_due"/>
                                    <field name="payment_state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_edu_enrollment_search" model="ir.ui.view">
        <field name="name">edu_enrollment.search</field>
        <field name="model">edu_enrollment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="student_id"/>
                <field name="level_id"/>
                <field name="class_group_id"/>
                <field name="status"/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
            </search>
        </field>
    </record>

    <record id="action_edu_enrollments" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">edu_enrollment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_edu_enrollments" name="Enrollments" parent="menu_edu_root" action="action_edu_enrollments"
              sequence="50"/>

</odoo>

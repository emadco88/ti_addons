<odoo>
    <record id="view_edu_evaluation_list" model="ir.ui.view">
        <field name="name">edu_evaluation.list</field>
        <field name="model">edu_evaluation</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="student_id"/>
                <field name="teacher_id"/>
                <field name="total_score"/>
                <field name="period"/>
            </list>
        </field>
    </record>

    <record id="view_edu_evaluation_form" model="ir.ui.view">
        <field name="name">edu_evaluation.form</field>
        <field name="model">edu_evaluation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="teacher_id"/>
                            <field name="enrollment_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="period"/>
                            <field name="total_score" readonly="1"/>
                        </group>
                    </group>
                    <group string="Rubric">
                        <field name="memorization_score"/>
                        <field name="recitation_score"/>
                        <field name="behavior_score"/>
                        <field name="homework_score"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_edu_evaluation_search" model="ir.ui.view">
        <field name="name">edu_evaluation.search</field>
        <field name="model">edu_evaluation</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="student_id"/>
                <field name="teacher_id"/>
                <field name="period"/>
                <filter string="Monthly" name="monthly" domain="[('period', '=', 'monthly')]"/>
            </search>
        </field>
    </record>

    <record id="view_edu_evaluation_pivot" model="ir.ui.view">
        <field name="name">edu_evaluation.pivot</field>
        <field name="model">edu_evaluation</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="teacher_id" type="row"/>
                <field name="period" type="col"/>
                <field name="total_score" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_edu_evaluation_graph" model="ir.ui.view">
        <field name="name">edu_evaluation.graph</field>
        <field name="model">edu_evaluation</field>
        <field name="arch" type="xml">
            <graph type="line">
                <field name="date" type="row" interval="month"/>
                <field name="total_score" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_edu_evaluations" model="ir.actions.act_window">
        <field name="name">Evaluations</field>
        <field name="res_model">edu_evaluation</field>
        <field name="view_mode">list,form,pivot,graph</field>
    </record>

    <menuitem id="menu_edu_evaluations" name="Evaluations" parent="menu_edu_root" action="action_edu_evaluations"
              sequence="70"/>

</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_ti_hr_employee_list" model="ir.ui.view">
        <field name="name">ti.hr.employee.list</field>
        <field name="model">ti.hr.employee</field>
        <field name="arch" type="xml">
            <list string="Employees">
                <field name="name"/>
                <field name="job_id"/>
                <field name="default_attendance_from" widget="float_time"/>
                <field name="default_attendance_to" widget="float_time"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_ti_hr_employee_form" model="ir.ui.view">
        <field name="name">ti.hr.employee.form</field>
        <field name="model">ti.hr.employee</field>
        <field name="arch" type="xml">
            <form string="Employee">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="job_id"/>
                        <field name="default_attendance_from" widget="float_time"/>
                        <field name="default_attendance_to" widget="float_time"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ti_hr_employee_kanban" model="ir.ui.view">
        <field name="name">ti.hr.employee.kanban</field>
        <field name="model">ti.hr.employee</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" string="Employees" default_group_by="job_id">
                <templates>
                    <t t-name="card">
                        <div class="row o_kanban_record">
                            <div class="col-12">
                                <div class="o_kanban_primary_bottom">
                                    <strong><field name="name"/></strong>
                                    <div class="text-muted">
                                        <field name="job_id"/>
                                    </div>
                                    <div class="mt-2">
                                        <span>من</span>
                                        <field name="default_attendance_from" widget="float_time"/>
                                        <span>إلى</span>
                                        <field name="default_attendance_to" widget="float_time"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_ti_hr_employee" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">ti.hr.employee</field>
        <field name="view_mode">list,kanban,form</field>
    </record>

    <menuitem id="menu_ti_hr_root" name="TI HR" sequence="10"/>
    <menuitem id="menu_ti_hr_employee" name="Employees" parent="menu_ti_hr_root" action="action_ti_hr_employee"/>
</odoo>
